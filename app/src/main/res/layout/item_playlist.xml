<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_item"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgAlbumCover"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="14dp"
        app:srcCompat="@drawable/ic_music_note" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@id/imgMoreSettings"
        android:layout_toEndOf="@id/imgAlbumCover"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtSongsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitle"
        android:layout_gravity="start|center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@id/imgMoreSettings"
        android:layout_toEndOf="@id/imgAlbumCover"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/grey_highlight"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/imgMoreSettings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ripple_effect"
        android:padding="13dp"
        app:srcCompat="@drawable/baseline_more_vert_white_24dp" />

</RelativeLayout>